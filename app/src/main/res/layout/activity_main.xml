<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.opencv.android.JavaCameraView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/image_manipulations_activity_surface_view"
        android:layout_marginEnd="10dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/low_h"/>

            <SeekBar
                android:id="@+id/seek_lowH"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:max="179"
                android:progress="50"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_h"/>

            <SeekBar
                android:id="@+id/seek_highH"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:max="179"
                android:progress="70"
                />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/low_s"/>

            <SeekBar
                android:id="@+id/seek_lowS"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="100"
                />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_s"/>

            <SeekBar
                android:id="@+id/seek_highS"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="255"
                />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/low_v"/>

            <SeekBar
                android:id="@+id/seek_lowV"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="100"
                />
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/high_v"/>

            <SeekBar
                android:id="@+id/seek_highV"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="255"
                />
            </LinearLayout>

        <Button
            android:id="@+id/button_start"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="25dp"
            android:text="@string/start"
            />

    </LinearLayout>

</LinearLayout>
